<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarImageView"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/koshkoo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/counterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatarImageView"
            android:layout_alignEnd="@+id/avatarImageView"
            android:layout_marginTop="20dp"
            android:text="0" />

        <Button
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatarImageView"
            android:layout_marginHorizontal="64dp"
            android:layout_toStartOf="@+id/counterTextView"
            android:text="Like"
            android:paddingHorizontal="12dp"/>

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/counterTextView"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="20dp"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/nameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Нажми сюда" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>